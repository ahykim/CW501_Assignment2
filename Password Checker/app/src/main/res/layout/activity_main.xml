<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtOp1"
        android:layout_width="305dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:background="@color/purple_200"
        android:hint="Enter Second Password:"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCompare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/btnCompare"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="222dp"
        android:text="Compare!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtOp1" />

    <EditText
        android:id="@+id/edtOp2"
        android:layout_width="305dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@color/baby_blue"
        android:hint="Enter First Password:"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/edtOp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPW" />

    <TextView
        android:id="@+id/txtPW"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="46dp"
        android:background="@color/black"
        android:text="Please enter passwords:"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/edtOp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>